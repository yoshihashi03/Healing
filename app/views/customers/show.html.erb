<div class="form-box">
<div class="container">
<div class="row">

    <div class="panel">
    	<div class="flex-favorite-content">

	      	<div class="flex-favorite-box">
	      		<div class="field">
			        <div class="panel-body">
			      		<%= attachment_image_tag @customer, :profile_image, size: "70x70", fallback: "hans-jurgen-mager-Fbdr6gXJBVY-unsplash", class: "profile-image-style" %><br>
			        </div>
	         	</div>

	         	<% if @customer == current_customer || current_customer.admin? %>
		         	<div class="field">
		         		<div class="panel-body">
		         			<div class="panel-title-customershow"><%= @customer.name %></div>
				        	<%= link_to "編集", edit_customer_path(@customer.id), class: "btn btn-success" %>
				        </div>
				    </div>
				<% end %>

			</div>
		</div>
	</div>

	<% if @customer == current_customer %>
		<div class="favorite-byn">
			<%= link_to "お気に入り一覧", customers_favorite_path, class: "btn btn-danger" %>
		</div>
	<% end %>


	<h3 class="myblog">投稿したお店</h3>
	<div class="flex-blog">
      <% @blogs.each do |blog| %>
	      <div class="flex-blog-content">

	      	<% if blog.blog_images.present? %>
	      		<div class="b">
					<% blog.blog_images.each do |image| %>
						<%= attachment_image_tag image, :photo, class: "blog-photo-index" %>
					<% end %>
				</div>
			<% else %>
				 <%= image_tag 'IMG_2667 2.jpeg', class: "blog-photo-index" %>
			<% end %>

			<%= link_to blog_path(blog) do %>
				<div class="index-blog-title"><%= blog.title %></div>
			    <div class="index-blog-address"><%= blog.address %></div>
			<% end %>

	      </div>
      <% end %>
    </div>

</div>
</div>
</div>
